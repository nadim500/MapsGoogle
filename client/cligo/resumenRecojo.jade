doctype html
html
  head
    title Resumen Recojo
    meta(charset="UTF-8")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js")
    script(src='../js/semantic.min.js')
    link(rel='stylesheet' type='text/css' href='../css/semantic.min.css')
    style.
      html,body{
        height : 100%;
        margin : 0 ;
      }
      #login{
        height : 10%;
        margin : 0;
      }
      #menu{
        height : 7%;
        margin : 0;
      }
      #map{
        height : 83%;
        border : 1px solid green;
        z-index : 1;
      }
      #volador{
        border : 2px solid gray;
        width : 30%;
        height : 75%;
        background : white;
        position : absolute;
        left : 2%;
        top : 22%;
        z-index : 2;
      }
      img#cligo{
        height : 64px;
      }
      img,#icon{
        cursor : pointer;
      }
      .item#first{
        width : 40%;
      }
      #zero{
        height : 100%;
        margin : 0;
      }
      #activate{
        border-style : outset;
        border-top-style : none;
        border-left-style : none;
        border-color: gray;
      }
  body
    .ui.container.fluid#volador
      .ui.grid#zero
        .ui.centered.row(style="height : 10%;padding:0;")
          .ui.two.item.menu
            a.item#activate(href="/resumen/recojo")
              h4.ui.header
                img(src="../css/location-volador.png")
                .content Recojo
            a.active.item(href="/resumen/motorizado")
              h4.ui.header
                img(src="../css/vehicle-deactivate.png")
                .content(style="color: #A0AEB8;") Destinos
        .ui.row(style="height : 80%;background : #f3f3f3;overflow: scroll;")
          .ui.container(style="padding-left : 3%;padding-right : 3%;")
            table.ui.fixed.table(style="text-align:center;")
              thead
                tr
                  th.one.wide
                  th.four.wide Direccion
                  th.five.wide Recojo
                  th.four.wide Telefono
                  th.two.wide 
              tbody
                tr
                  th
                    .ui.checkbox(style="margin-left:20%")
                      input(type="checkbox")
                      label
                  th Nombre Nombre Nombre Nombre Nombre Nombre Nombre Nombre Nombre 
                  th PruebaDireccion
                  th PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono 
                  th
                    a
                      i.big.info.circle.icon#icon
                tr
                  th
                    .ui.checkbox(style="margin-left:20%")
                      input(type="checkbox")
                      label
                  th Nombre Nombre Nombre Nombre Nombre Nombre Nombre Nombre Nombre 
                  th PruebaDireccion
                  th PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono 
                  th
                    a
                      i.big.info.circle.icon#icon  
                tr
                  th
                    .ui.checkbox(style="margin-left:20%")
                      input(type="checkbox")
                      label
                  th Nombre Nombre Nombre Nombre Nombre Nombre Nombre Nombre Nombre 
                  th PruebaDireccion
                  th PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono PruebaTelefono 
                  th
                    a
                      i.big.info.circle.icon#icon
        .ui.row(style="height :10%;padding : 0%;margin:1%;")
          .ui.center.aligned.container.fluid
            .ui.fluid.button.blue
              i.checkmark.box.icon
              | Aceptar

    .ui.stackable.menu#login
      .ui.fluid.container
        a
          img#cligo(src="../css/cligo.png")
        .ui.right.labeled.icon.menu
          a.item
              i.user.icon
              | Usuario 
          //.item
          a.item
            i.add.circle.icon
            | Nueva ruta
    .ui.stackable.menu#menu
      .ui.fluid.container
        a.item(href="/recojo/listar")
          img#1(src="../css/locationred.png")
          | Origen
        a.item(href="/motorizado/listar")
          img#2(src="../css/transport.png")
          | Motorizados
        .right.menu
          a.item(href="/resumen/recojo")
            .ui.button Resumen 
          .item
            .ui.button.blue Ruta optima
    #map
  script.
    $("#1")
      .popup({
        hoverable: true,
        title : 'Direccion de recojo'
      });
    $("#2")
      .popup({
        hoverable: true,
        title : 'Direccion de motorizado'
      });
  script.
    var mapGoogle = document.getElementById('map');
    var centro = {
      lat : -12.046775,
      lng : -77.042820
    };
    var map;
    function initMap(){
      map = new google.maps.Map(mapGoogle,{
      center: centro,
      zoom: 12,
      mapTypeControl : false,
        streetViewControl : false,
        zoomControlOptions : {
          position : google.maps.ControlPosition.RIGHT_TOP
        }
      });
    }
  script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyB6f88fRxA9xODuXZ78cPpR6o8nU8dE_lk&signed_in=true&libraries=places&callback=initMap')
